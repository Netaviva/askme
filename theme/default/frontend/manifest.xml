<?xml version="1.0" encoding="utf-8"?>

<extension:theme>
	<title>Social Contest</title>
	<description>A simple theme based on zurb foundation css for sport contest social community.</description>
	<author>LinkoDEV Team</author>
	<author_url>http://linkodev.com</author_url>
	<version>1.0.0</version>
	<license>Copyright (c) Netaviva 2013. All Rights Reserved.</license>

	<layouts>
		<layout name="template" title="Main Template" type="full">
			<position name="sidebar">Sidebar</position>
			<position name="footer-block-1">Footer Block One</position>
		</layout>
		<layout name="full" title="Full Width" type="full">

		</layout>
		<layout name="two_col_left" title="Two Columns Left Sidebar" type="full">

		</layout>
		<layout name="three_columns" title="Three Columns" type="full">
			<position name="leftbar">Leftbar</position>
			<position name="sidebar">Sidebar</position>
		</layout>
		<layout name="footer" title="Three Columns" type="partial">

		</layout>
	</layouts>

	<menu>
		<location var="main_menu">Main Menu</location>
		<location var="footer_links">Footer Links</location>
	</menu>

	<settings>

		<setting var="header_background_color"
		         type="color"
		         label="Background Color"
		         description="">#F5F5F5</setting>

		<setting var="background_color"
		         type="color"
		         label="Background Color"
		         description="">#F5F5F5</setting>

		<setting var="facebook_url"
		         type="text"
		         label="Facebook Url"
		         description="The link to your facebook profile">http://facebook.com</setting>

		<setting var="twitter_url"
		         type="text"
		         label="Twitter Url"
		         description="The link to your twitter profile">http://twitter.com</setting>

		<setting var="googleplus_url"
		         type="text"
		         label="Google Plus Url"
		         description="The link to your google plus profile">http://plus.google.com</setting>

		<setting var="footer_text"
		         type="text"
		         label="Footer Text"
		         description=""><![CDATA[@copy; Copyright 2012. powered by LinkoCMS]]></setting>
	</settings>

</extension:theme>